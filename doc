{% endcomment %}

<link data-href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet" type="text/css" media="all" />

<style>
  .ajaxified-cart-feedback {
    display: block;
    line-height: 36px;
    font-size: 90%;
    vertical-align: middle;
  }
  .ajaxified-cart-feedback.success {
    color: #3D9970;
    line-height: 20px;
    margin-top: 5px;
    font-size: 12px;
    text-align: center;
  }
  .ajaxified-cart-feedback.error {
    color: #FF4136;
    line-height: 20px;
    margin-top: 5px;
    font-size: 12px;
    text-align: center;
  }
  .ajaxified-cart-feedback a {
    border-bottom: 1px solid;
  } 
  .sidebar2 {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 999999;
    top: 0;
    right: 0;
    background-color: #ffffff;
    overflow-x: hidden;
    transition: 0.5s;
  }
  .sidebar2 .closebtn {
    position: absolute;
    top: 10px;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
    color: #ffffff;
  }
  .input--number a {
    color: #ffffff;
  }
  .input--number a {
    color: #ffffff;
    cursor: pointer;
  }  
