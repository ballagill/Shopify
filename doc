    font-weight: 600;
    text-transform: uppercase;
} 
.overlaydiv {
    display: none;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 3333;
    background-color: rgba(0,0,0,0.6);
} 
span.progressbartext {
    font-size: 14px;
    text-transform: uppercase;
    text-align: center;
    color: #ffffff;
    font-weight: 600;
    margin-top: 10px;
    margin-bottom: 0px;
}
.progressbarparent {
    float: left;
    width: 100%;
    background: rgb(76, 76, 76);
    margin-bottom: 0px;
    text-align: center;
    padding-top: 10px;
} 
.progressbardiv {
    width: 92%;
    text-align: center;
    margin: 0 auto;
} 
